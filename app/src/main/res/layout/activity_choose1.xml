<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".selectCategoryActivity">

    <ImageButton
        android:id="@+id/teaButton"
        android:layout_width="144dp"
        android:layout_height="200dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="64dp"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/petbottle_tea" />

    <ImageButton
        android:id="@+id/juiceButton"
        android:layout_width="144dp"
        android:layout_height="200dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="48dp"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/teaButton"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/petbottle_juice" />

    <ImageButton
        android:id="@+id/coffeeButton"
        android:layout_width="144dp"
        android:layout_height="200dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="64dp"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/teaButton"
        app:srcCompat="@drawable/can_coffee" />

    <ImageButton
        android:id="@+id/energyButton"
        android:layout_width="144dp"
        android:layout_height="200dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="48dp"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/coffeeButton"
        app:layout_constraintTop_toBottomOf="@+id/juiceButton"
        app:srcCompat="@drawable/drink_energy_can" />
</androidx.constraintlayout.widget.ConstraintLayout>